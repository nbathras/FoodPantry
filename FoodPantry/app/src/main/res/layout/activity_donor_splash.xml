<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DonorSplashActivity">

    <TextView
        android:id="@+id/distributorListLabel"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Distributor List"
        tools:layout_marginStart="10dp"
        tools:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <ListView
        android:id="@+id/donor_splash_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>